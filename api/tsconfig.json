{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "outDir": "./dist",
    // "rootDir": "./src",
    "paths": {
      "@mailivo/shared-types": ["../packages/shared-types/src"]
    },
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "allowJs": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src/**/*", "../app/src/services/contact.service.ts", "../app/src/lib/workflow-execution.ts", "../app/src/lib/workflow-validation.ts"],
  "exclude": ["node_modules", "dist"]
}